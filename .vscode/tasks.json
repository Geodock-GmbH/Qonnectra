{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run All Backend Tests",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "pytest",
        "backend/apps/api/tests",
        "-v",
        "--tb=short"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "DJANGO_SETTINGS_MODULE": "core.settings",
          "PYTHONPATH": "${workspaceFolder}/backend"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Run Backend Unit Tests",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "pytest",
        "backend/apps/api/tests/test_models.py",
        "backend/apps/api/tests/test_views.py",
        "-v",
        "--tb=short"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "DJANGO_SETTINGS_MODULE": "core.settings",
          "PYTHONPATH": "${workspaceFolder}/backend"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Run Backend Integration Tests",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "pytest",
        "backend/apps/api/tests/test_integration.py",
        "-v",
        "--tb=short"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "DJANGO_SETTINGS_MODULE": "core.settings",
          "PYTHONPATH": "${workspaceFolder}/backend"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Run Frontend Tests (Playwright)",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "test"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Frontend Tests (Debug)",
      "type": "shell",
      "command": "npx",
      "args": [
        "playwright",
        "test",
        "--debug"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": []
    },
    {
      "label": "Run All Tests (Backend + Frontend)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Run All Backend Tests",
        "Run Frontend Tests (Playwright)"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Django Migrate",
