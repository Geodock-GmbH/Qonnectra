{
  "version": 8,
  "name": "Qonnectra Light",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "mbtiles://{germany}"
    }
  },
  "glyphs": "{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f9fa"
      }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "grass", "#d8e8c8",
          "wood", "#c5ddb8",
          "farmland", "#eef0d5",
          "ice", "#e8f0f8",
          "#e8e8e8"
        ],
        "fill-opacity": 0.6
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "residential", "#e8e0d8",
          "commercial", "#f0e8e0",
          "industrial", "#e0e0e8",
          "park", "#c8e0c8",
          "cemetery", "#d8e0d0",
          "hospital", "#f8e0e0",
          "school", "#f0e8d8",
          "#e8e8e8"
        ],
        "fill-opacity": 0.5
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#a0c8e8"
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#a0c8e8",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8, 0.5,
          14, 2
        ]
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "fill-color": "#d8d0c8",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "building-outline",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "line-color": "#c0b8b0",
        "line-width": 0.5
      }
    },
    {
      "id": "road-minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "minor", "service", "track"]],
      "paint": {
        "line-color": "#ffffff",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10, 0.5,
          14, 2,
          18, 4
        ]
      }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "secondary", "tertiary"]],
      "paint": {
        "line-color": "#ffffff",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8, 0.5,
          14, 3,
          18, 6
        ]
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "primary"]],
      "paint": {
        "line-color": "#ffd699",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          6, 0.5,
          14, 4,
          18, 8
        ]
      }
    },
    {
      "id": "road-trunk",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "trunk"]],
      "paint": {
        "line-color": "#ffcc80",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          6, 1,
          14, 5,
          18, 10
        ]
      }
    },
    {
      "id": "road-motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "motorway"]],
      "paint": {
        "line-color": "#ffaa80",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 1,
          14, 6,
          18, 12
        ]
      }
    },
    {
      "id": "rail",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "rail"],
      "paint": {
        "line-color": "#b0a8a0",
        "line-width": 1.5,
        "line-dasharray": [4, 2]
      }
    },
    {
      "id": "admin-boundary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": [">=", "admin_level", 4],
      "paint": {
        "line-color": "#a0a0a0",
        "line-width": 1,
        "line-dasharray": [3, 2]
      }
    },
    {
      "id": "road-label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "minzoom": 14,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Regular"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          14, 10,
          18, 13
        ],
        "symbol-placement": "line",
        "text-rotation-alignment": "map",
        "text-max-angle": 30
      },
      "paint": {
        "text-color": "#666666",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "housenumber-label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "housenumber",
      "minzoom": 17,
      "layout": {
        "text-field": "{housenumber}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 10,
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#888888",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-label-village",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "village"],
      "minzoom": 10,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 11,
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#555555",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "place-label-town",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "town"],
      "minzoom": 8,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 13,
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#444444",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "place-label-city",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "city"],
      "minzoom": 5,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Bold"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 12,
          10, 18
        ],
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    }
  ]
}
