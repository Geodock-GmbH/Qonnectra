# Production Environment Configuration
# Copy this file to .env and fill in your actual values

# ===================
# DOMAIN CONFIGURATION
# ===================
# Replace these with your actual domain names
DOMAIN_NAME=your-domain.com
API_DOMAIN=api.your-domain.com
APP_DOMAIN=app.your-domain.com
CLOUD_DOMAIN=cloud.your-domain.com
GEOSERVER_DOMAIN=geoserver.your-domain.com
QGIS_DOMAIN=qgis.your-domain.com

# ===================
# DATABASE CONFIGURATION
# ===================
# IMPORTANT: Change these default credentials!
DB_NAME=krit_gis_production
DB_USER=krit_gis_prod_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_HOST=db
DB_PORT=5432

# Nextcloud database (separate from main app)
NEXTCLOUD_DATABASE_NAME=nextcloud_production

# ===================
# DJANGO CONFIGURATION
# ===================
# CRITICAL: Generate a new secret key for production!
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY

# Set to False in production
DEBUG=False

# Add your domain names here (comma-separated, no spaces)
DJANGO_ALLOWED_HOSTS=your-domain.com,api.your-domain.com
CORS_ALLOWED_ORIGINS=your-domain.com,api.your-domain.com,cloud.your-domain.com
CSRF_TRUSTED_ORIGINS=api.your-domain.com,your-domain.com,

# Django superuser (for initial setup)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@your-domain.com
DJANGO_SUPERUSER_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD

# ===================
# GIS CONFIGURATION
# ===================
# Default SRID for your project (e.g., 4326 for WGS84, 3857 for Web Mercator)
DEFAULT_SRID=25832

# ===================
# GEOSERVER CONFIGURATION
# ===================
GEOSERVER_ADMIN_USER=admin
GEOSERVER_ADMIN_PASSWORD=CHANGE_THIS_GEOSERVER_PASSWORD

# ===================
# NEXTCLOUD CONFIGURATION
# ===================
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=CHANGE_THIS_NEXTCLOUD_PASSWORD

# Trusted domains for Nextcloud (your cloud domain)
NEXTCLOUD_TRUSTED_DOMAINS=cloud.your-domain.com

# Nextcloud URLs
NEXTCLOUD_URL=https://cloud.your-domain.com
NEXTCLOUD_PUBLIC_URL=https://cloud.your-domain.com

# File uploader credentials for your app
NEXTCLOUD_FILEUPLOADER_USERNAME=fileuploader
NEXTCLOUD_FILEUPLOADER_PASSWORD=CHANGE_THIS_UPLOADER_PASSWORD

# Nextcloud base path for file uploads
NEXTCLOUD_BASE_PATH=/uploads

# SSL verification (set to True in production)
NEXTCLOUD_VERIFY_SSL=True

# ===================
# PORT CONFIGURATION (Optional)
# ===================
# Only change these if you have port conflicts
BACKEND_PORT=8000
GEOSERVER_PORT=8081
QGIS_SERVER_PORT=8082
NEXTCLOUD_PORT=8080
CADDY_PORT=80
CADDY_HTTPS_PORT=443

